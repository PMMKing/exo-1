<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:windowBackground">@color/pub_color_white</item>
        <item name="windowNoTitle">true</item>
        <item name="android:windowAnimationStyle">@style/SlideAnim</item>
    </style>

    <style name="statuBarAppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:windowBackground">@color/pub_color_white</item>
        <item name="windowNoTitle">true</item>
        <item name="android:windowAnimationStyle">@style/SlideAnim</item>
    </style>

    <style name="mainAppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/pub_color_red</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:windowBackground">@color/pub_color_white</item>
        <item name="windowNoTitle">true</item>
        <item name="android:windowAnimationStyle">@style/FadeAnim</item>
    </style>

    <style name="titleBarStyle">
        <item name="android:id">@+id/title_bar</item>
        <item name="android:background">@color/pub_color_red</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="SplashTheme" parent="Theme.AppCompat.NoActionBar">
        <item name="android:windowBackground">@drawable/splash_themebg</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowFullscreen">true</item>
        <item name="android:windowAnimationStyle">@style/FadeAnim</item>
    </style>


    <style name="SlideAnim" parent="@android:style/Animation.Activity">

        <item name="android:activityOpenEnterAnimation">@anim/start_right_in_show</item>
        <item name="android:activityOpenExitAnimation">@anim/start_left_out_dismiss</item>
        <item name="android:activityCloseEnterAnimation">@anim/back_left_in_show</item>
        <item name="android:activityCloseExitAnimation">@anim/back_right_out_dismiss</item>

        <!--透明背景activity动画失效，只能设置window动画，微信是怎么搞的 ？？？？-->
        <!--透明activity设置window切换动画有bug 按下home键会闪屏-->
        <!--最底层的activity设置为不透明可以解决,but 下层activity动画无效-->

        <!--<item name="android:windowEnterAnimation">@anim/start_right_in_show</item>-->
        <!--<item name="android:windowExitAnimation">@anim/back_right_out_dismiss</item>-->

    </style>

    <style name="PopAnim" parent="@android:style/Animation.Activity">
        <item name="android:activityOpenEnterAnimation">@anim/up</item>
        <item name="android:activityOpenExitAnimation">@anim/none</item>
        <item name="android:activityCloseEnterAnimation">@anim/none</item>
        <item name="android:activityCloseExitAnimation">@anim/down</item>

        <!--<item name="android:windowEnterAnimation">@anim/up</item>-->
        <!--<item name="android:windowExitAnimation">@anim/down</item>-->
    </style>

    <style name="FadeAnim" parent="@android:style/Animation.Activity">
        <item name="android:activityOpenEnterAnimation">@anim/fade_in</item>
        <item name="android:activityOpenExitAnimation">@anim/none</item>
        <item name="android:activityCloseEnterAnimation">@anim/none</item>
        <item name="android:activityCloseExitAnimation">@anim/fade_out</item>

        <!--<item name="android:windowEnterAnimation">@anim/fade_in</item>-->
        <!--<item name="android:windowExitAnimation">@anim/fade_out</item>-->

    </style>

    <!--加载dialog的style-->
    <style name="loading_dialog" parent="android:style/Theme.Dialog">
        <!--背景颜色及和透明程度-->
        <item name="android:windowBackground">@android:color/transparent</item>
        <!--是否去除标题 -->
        <item name="android:windowNoTitle">true</item>
        <!--是否去除边框-->
        <item name="android:windowFrame">@null</item>
        <!--是否浮现在activity之上-->
        <item name="android:windowIsFloating">true</item>
        <!--是否模糊-->
        <item name="android:backgroundDimEnabled">false</item>
    </style>

    <style name="atom_PopupAnimation" mce_bogus="1" parent="android:Animation">
        <item name="android:windowEnterAnimation">@android:anim/fade_in</item>
        <item name="android:windowExitAnimation">@android:anim/fade_out</item>
    </style>

    <style name="line_gray_h">
        <item name="android:background">@color/pub_color_gray_line</item>
        <item name="android:layout_height">0.5dp</item>
        <item name="android:layout_width">match_parent</item>
    </style>

    <style name="line_gray_v">
        <item name="android:background">@color/pub_color_gray_line</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_width">0.5dp</item>
    </style>

    <style name="theme_StyleEditText" parent="android:Widget.EditText">
        <item name="android:textSize">16dp</item>
        <item name="android:textColor">@color/pub_color_black</item>
        <item name="android:background">@null</item>
        <item name="android:textColorHint">#ffDDDDDD</item>
        <item name="android:textCursorDrawable">@drawable/pub_edittext_cursor</item>
    </style>

</resources>
