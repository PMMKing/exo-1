<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/pub_color_gray_f5f5f5"
    android:orientation="vertical">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <com.framework.view.AddView
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:paddingLeft="28dp">

                <com.framework.view.IFView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/icon_font_money"
                    android:textColor="@color/pub_color_gray_666"
                    android:textSize="@dimen/text_h16" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:paddingBottom="15dp"
                    android:paddingTop="22dp"
                    android:text="水龙头坏了"
                    android:textColor="@color/pub_color_black"
                    android:textSize="@dimen/text_h15" />

            </LinearLayout>

            <View
                style="@style/line_gray_h"
                android:layout_marginLeft="26dp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:paddingLeft="28dp">

                <com.framework.view.IFView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/icon_font_money"
                    android:textColor="@color/pub_color_gray_666"
                    android:textSize="@dimen/text_h16" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:paddingBottom="15dp"
                    android:paddingTop="22dp"
                    android:text="xxxx小区街道106"
                    android:textColor="@color/pub_color_black"
                    android:textSize="@dimen/text_h15" />

            </LinearLayout>

            <View style="@style/line_gray_h" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/pub_color_white"
                android:orientation="horizontal"
                android:paddingLeft="15dp">

                <TextView
                    android:layout_width="100dp"
                    android:layout_height="wrap_content"
                    android:paddingBottom="6dp"
                    android:paddingTop="22dp"
                    android:text="状态："
                    android:textColor="@color/pub_color_gray_666"
                    android:textSize="@dimen/text_h14" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingBottom="6dp"
                    android:paddingTop="22dp"
                    android:text="已接单"
                    android:textColor="@color/pub_color_black"
                    android:textSize="@dimen/text_h14" />

            </LinearLayout>

            <View style="@style/line_gray_h" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/pub_color_white"
                android:orientation="horizontal"
                android:paddingLeft="15dp">

                <TextView
                    android:layout_width="100dp"
                    android:layout_height="wrap_content"
                    android:paddingBottom="6dp"
                    android:paddingTop="22dp"
                    android:text="师傅姓名"
                    android:textColor="@color/pub_color_gray_666"
                    android:textSize="@dimen/text_h14" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingBottom="6dp"
                    android:paddingTop="22dp"
                    android:text="豆豆小朋友"
                    android:textColor="@color/pub_color_black"
                    android:textSize="@dimen/text_h14" />

            </LinearLayout>

            <View style="@style/line_gray_h" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/pub_color_white"
                android:orientation="horizontal"
                android:paddingLeft="15dp">

                <TextView
                    android:layout_width="100dp"
                    android:layout_height="wrap_content"
                    android:paddingBottom="6dp"
                    android:paddingTop="22dp"
                    android:text="联系电话"
                    android:textColor="@color/pub_color_gray_666"
                    android:textSize="@dimen/text_h14" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingBottom="6dp"
                    android:paddingTop="22dp"
                    android:text="17321372136"
                    android:textColor="@color/pub_color_black"
                    android:textSize="@dimen/text_h14" />

            </LinearLayout>

            <View style="@style/line_gray_h" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/pub_color_white"
                android:orientation="horizontal"
                android:paddingLeft="15dp">

                <TextView
                    android:layout_width="100dp"
                    android:layout_height="wrap_content"
                    android:paddingBottom="6dp"
                    android:paddingTop="22dp"
                    android:text="评价"
                    android:textColor="@color/pub_color_gray_666"
                    android:textSize="@dimen/text_h14" />

                <CheckBox
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="满意"
                    android:textColor="@color/pub_color_black" />

                <CheckBox
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="30dp"
                    android:text="不满意"
                    android:textColor="@color/pub_color_black" />

            </LinearLayout>

            <View style="@style/line_gray_h" />

            <EditText
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@color/pub_color_white"
                android:gravity="left"
                android:hint="不满意原因"
                android:lines="6"
                android:paddingLeft="15dp"
                android:paddingRight="15dp"
                android:paddingTop="11dp"
                android:textColor="@color/pub_color_gray_666"
                android:textColorHint="@color/pub_color_gray_666"
                android:textSize="@dimen/text_h12" />


            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="30dp"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="15dp"
                android:layout_marginTop="25dp"
                android:background="@drawable/pub_btn_blue_arc_selector"
                android:clickable="true"
                android:enabled="true"
                android:gravity="center"
                android:paddingBottom="13dp"
                android:paddingTop="13dp"
                android:text="提交"
                android:textColor="@color/pub_color_white"
                android:textSize="@dimen/text_h18" />

        </LinearLayout>

    </ScrollView>

</LinearLayout>