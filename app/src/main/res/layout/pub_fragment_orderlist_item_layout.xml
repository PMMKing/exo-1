<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_marginBottom="9dp"
            android:layout_marginLeft="14dp"
            android:layout_marginRight="30dp"
            android:layout_marginTop="15dp"
            android:background="@drawable/pub_gray_box"
            android:scaleType="center"
            android:src="@drawable/pub_login_icon" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="125dp"
            android:layout_marginRight="23dp"
            android:layout_marginTop="17dp"
            android:ellipsize="end"
            android:maxLines="3"
            android:text="越南进口Tipo牛奶面包干饼干300g办公室零食大礼包"
            android:textColor="@color/pub_color_black"
            android:textSize="@dimen/text_h12" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom|right"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:paddingBottom="15dp"
            android:paddingRight="23dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="共1件商品 合计："
                android:textColor="@color/pub_color_gray_666"
                android:textSize="@dimen/text_h12" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="2dp"
                android:text="￥100.00"
                android:textColor="@color/pub_color_blue"
                android:textSize="@dimen/text_h18" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:text="X1"
                android:textColor="@color/pub_color_black"
                android:textSize="@dimen/text_h18" />

        </LinearLayout>

    </FrameLayout>

    <View
        style="@style/line_gray_h"
        android:layout_marginLeft="14dp"
        android:layout_marginRight="14dp" />


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingBottom="10dp"
        android:paddingLeft="16dp"
        android:gravity="right"
        android:paddingRight="16dp"
        android:paddingTop="7dp">

        <TextView
            android:layout_width="80dp"
            android:layout_height="33dp"
            android:layout_marginLeft="10dp"
            android:gravity="center"
            android:text="评价"
            android:clickable="true"
            android:background="@drawable/pub_btn_blue_box_selector"
            android:textColor="@color/pub_color_blue"
            android:textSize="@dimen/text_h15" />


    </LinearLayout>

</LinearLayout>