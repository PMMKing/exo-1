<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:background="@drawable/selector">

    <LinearLayout
        android:padding="8dp"
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/unread_msg_number"
            android:layout_width="14dp"
            android:layout_height="14dp"
            android:layout_marginTop="4dp"
            android:src="@drawable/unread_count_bg"
            android:visibility="gone"
            />
        <TextView
            android:id="@+id/tv_message_type"
            android:textSize="18dp"
            android:textColor="@color/common_color_yellow"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="[通知]" />


        <TextView
            android:layout_marginLeft="2dp"
            android:id="@+id/tv_title"
            android:textSize="18dp"
            android:textColor="@color/common_color_black"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="弯成MOMA社区" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:paddingBottom="5dp"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/tv_name"
            android:textSize="14dp"
            android:layout_marginLeft="5dp"
            android:textColor="@color/common_top_bar_blue"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="弯成MOMA社区" />

        <View
            android:layout_width="0dp"
            android:layout_height="1dp"
            android:layout_weight="1" />

        <TextView
            android:id="@+id/tv_date"
            android:textSize="12dp"
            android:textColor="@color/common_color_gray"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="2015-12-12" />
    </LinearLayout>

</LinearLayout>