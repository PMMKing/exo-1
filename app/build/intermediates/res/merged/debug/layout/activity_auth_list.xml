<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/t_bg">


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingLeft="@dimen/padding_search_bar"
        android:paddingRight="27dp"
        android:paddingTop="7dp"
        android:paddingBottom="7dp"
        android:background="#ededed">

        <EditText
            android:paddingTop="5dp"
            android:paddingBottom="5dp"
            android:paddingLeft="5dp"
            android:id="@+id/query"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:background="@drawable/seabar_input"
            android:drawableLeft="@drawable/search_bar_icon_normal"
            android:focusable="false"
            android:focusableInTouchMode="true"
            android:textSize="16sp"
            android:layout_marginLeft="4dp"
            android:singleLine="true"

            />

        <ImageButton
            android:id="@+id/search_clear"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="3dp"
            android:background="@android:color/transparent"
            android:padding="6dp"
            android:src="@drawable/search_clear"
            android:visibility="invisible" />

    </RelativeLayout>


    <LinearLayout
        android:id="@+id/ll_contact"
        android:clickable="true"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="10dp"
        android:background="@drawable/selector"
        android:gravity="center_vertical">

        <ImageView
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:src="@drawable/groups_icon" />


        <TextView
            android:textSize="18dp"
            android:textColor="@color/common_color_black"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginLeft="10dp"
            android:text="通讯录" />


        <ImageView
            android:layout_width="16dp"
            android:layout_height="16dp"
            android:src="@drawable/icon_domo" />
    </LinearLayout>

    <TextView
        android:layout_margin="10dp"
        android:textSize="16dp"
        android:textColor="@color/common_color_black"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="最近" />

    <ListView
        android:id="@+id/list"
        android:background="@color/common_color_white"
        android:layout_width="match_parent"
        android:dividerHeight="0.5dp"
        android:divider="@color/t_bg"
        android:layout_height="match_parent" />
</LinearLayout>