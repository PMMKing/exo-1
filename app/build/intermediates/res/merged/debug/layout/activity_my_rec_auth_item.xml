<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="10dp"
    android:background="@color/common_color_white">

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:background="#68C270"
        android:padding="10dp"
        android:layout_gravity="center_vertical"
        android:orientation="horizontal">
        <TextView
            android:textSize="24dp"
            android:textColor="@color/common_color_white"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:text="万达广场"
            android:padding="5dp"
            android:id="@+id/tv_community" />

        <ImageView
            android:id="@+id/image_auth"
            android:textSize="18dp"
            android:layout_marginLeft="10dp"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:src="@drawable/btn_guestauthorized_press" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:background="@color/t_bg"
        android:padding="5dp"
        android:layout_gravity="center_vertical"
        android:orientation="horizontal">


        <TextView
            android:id="@+id/tv_name"
            android:textSize="18dp"
            android:textColor="@color/common_color_black"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="陆洋授权" />

        <TextView
            android:id="@+id/tv_eff"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:gravity="center"
            android:textSize="12dp"
            android:textColor="@color/common_color_greed"
            android:layout_height="wrap_content"
            android:text="1天后过期" />

        <TextView
            android:id="@+id/tv_send"
            android:padding="10dp"
            android:textSize="18dp"
            android:textColor="@color/common_color_orange"
            android:layout_width="wrap_content"
            android:gravity="center"
            android:layout_height="wrap_content"
            android:text="取消" />
    </LinearLayout>

</LinearLayout>
